extends layout

block content
  .bs-docs-section.clearfix            
  .bs-component
    nav.navbar.navbar-inverse
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-2')
            span.sr-only Toggle navigation                     
            span.icon-bar                  
            span.icon-bar                      
            span.icon-bar                 
          a.navbar-brand(href='#')= title                  
        #bs-example-navbar-collapse-2.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href='#')
                | My Books
                span.sr-only (current)                     
            li
              a(href='#') About LitTracker                                      
          form.navbar-form.navbar-left(role='search')
            .form-group
              input.form-control(type='text', placeholder='Find a Book')                      
            button.btn.btn-default(type='submit') Search               
          ul.nav.navbar-nav.navbar-right
            li
              a(href='#') Sign Up
          ul.nav.navbar-nav.navbar-right
            li
              a(href='#') Log In
  div.main
  div.svgHolder
  div.container#formHolder
    span Add a book to tracking: 
    input#new-book-name(type='text' placeholder='Title')
    input#new-book-author(type='text' placeholder='Author')
    input#new-book-url(type='text' placeholder='Amazon URL')
    input#new-url-desc(type='text' placeholder='Edition')
    input#submit(type='button' value='Add Book')